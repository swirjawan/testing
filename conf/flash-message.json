{
  "openapi": "3.0.0",
  "info": {
    "description": "PMN Portal Flash Message",
    "version": "1.0",
    "title": "API for Flash Message",
    "termsOfService": "http://swagger.io/terms/",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
"servers" : [ {
    "url" : "https://api.prudential.com/v1"
  }, {
    "url" : "http://api.prudential.com/v1"
  } ],  
  "tags": [
    {
      "name": "Flash Messsage API",
      "description": "Flash Messsage API \"pmn-flash-message\" project"
    }
  ],
  "paths": {
    "/pmn/flash/message": {
      "post": {
        "tags": [
          "Flash Message API"
        ],
        "summary": "Retrieve list of messages",
        "description": "API to Notification",
        "operationId": "pmnFlashMessageList",
        "requestBody": {
          "description": "Json model to retrieve messages with filter",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "JWT Token from login"
                  },
                  "filter": {
                    "type": "object",
                    "properties": {
                      "policyNo": {
                        "type": "string"
                      },
                      "admissionId": {
                        "type": "string"
                      },
                      "patientName": {
                        "type": "string"
                      }
                    }
                  },
                  "limit": {
                    "type": "integer"
                  },
                  "offset": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "subject": {
                        "type": "string"
                      },
                      "summary": {
                        "type": "string"
                      },
                      "isRead": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "invalid api key",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pmn/flash/message/detail": {
      "post": {
        "tags": [
          "Flash Message API"
        ],
        "summary": "View message detail",
        "description": "API Flash Message",
        "operationId": "pmnFlashMessageDetail",
        "requestBody": {
          "description": "Get message detail by id",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "JWT Token from login"
                  },
                  "id": {
                    "type": "string",
                    "description": "message that needs to be marked read"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "subject": {
                      "type": "string"
                    },
                    "summary": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string",
                      "description": "String.format(\"%s \");"
                    },
                    "metadata": {
                      "type": "object",
                      "properties": {
                        "reff": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "type": {
                              "type": "string"
                            }
                          }
                        },
                        "metadata": {
                          "type": "object",
                          "properties": {
                            "patientName": {
                              "type": "string"
                            },
                            "policyNo": {
                              "type": "string"
                            },
                            "admissionId": {
                              "type": "string"
                            },
                            "messageType": {
                              "type": "string"
                            },
                            "isRead": {
                              "type": "boolean"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "invalid api key",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pmn/flash/message/read": {
      "post": {
        "tags": [
          "Flash Message API"
        ],
        "summary": "Mark a message has been read",
        "description": "Call this API, only if the message marked as unread",
        "operationId": "pmnFlashMessageRead",
        "requestBody": {
          "description": "Mark this message has been read by id",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "JWT Token from login"
                  },
                  "id": {
                    "type": "string",
                    "description": "message that needs to be marked read"
                  },
                  "userId": {
                    "type": "string",
                    "description": "last one who read the message"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "isSuccess": {
                      "type": "boolean"
                    },
                    "timestamp": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "invalid api key",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
  },
    "/pmn/flash/message/notification" : {
      "post" : {
        "tags" : [ "Flash Message API" ],
        "summary" : "notification in Portal",
        "description" : "Call this API, when user see menu admission",
        "operationId" : "pmnFlashMessageNotification",
        "requestBody" : {
          "description" : "flash message",
          "required" : true,
          "content" : {
            "application/json" : {
              "schema" : {
                "type" : "object",
                "properties" : {
                  "token" : {
                    "type" : "string",
                    "description" : "JWT Token from login"
                  }
                }
              }
            }
          }
        },
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object",
                  "properties" : {
                    "flashMessage" : {
                      "type" : "string"
                    }
                  }
                }
              }
            }
          },
          "401" : {
            "description" : "invalid api key",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object",
                  "properties" : {
                    "status" : {
                      "type" : "string"
                    },
                    "message" : {
                      "type" : "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      }
    }
  }
}
